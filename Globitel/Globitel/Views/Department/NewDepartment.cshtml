@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@model Department
@{
    ViewData["Title"] = "NewDepartment";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}
@section Body{
    <form method="post">
        <div class="container">
            <div class="row" style="margin-top:5px">
                <h3>@localizer["AddDepartment"]</h3>
            </div>
            <div class="row" style="margin-top: 10px; background-color: white; padding: 36px; border-radius: 10px;">
                <div class="col-lg-6">
                    <div class="form-group">
                        <input type="hidden" asp-for="Id" />
                        <label>@localizer["DepartmentName"]</label>
                        <input type="text" class="form-control" asp-for="Name" />
                        <span asp-validation-for="Name" class="errorMsg"></span>
                    </div>
                </div>
                <div class="col-lg-6">
                    <input type="submit" class="btn btn-primary" style="margin-top: 22px; width: 90px;" value="@localizer["Save"]" asp-action="SaveData" />
                </div>
            </div>
        </div>
    </form>
}

